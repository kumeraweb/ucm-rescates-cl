---
import { SITE, LINKS } from '../data/site'
---

<style>
  .floating-wspp {
    position: fixed;
    bottom: 1.5rem;
    right: 1.5rem;
    z-index: 9999;
    width: 58px;
    height: 58px;
    background-color: #25d366;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 8px 22px rgba(0, 0, 0, 0.25);
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
    cursor: pointer;
  }
  .floating-wspp:hover {
    transform: scale(1.08);
    box-shadow: 0 12px 26px rgba(0, 0, 0, 0.35);
  }
  .wspp-icon {
    width: 30px;
    height: 30px;
    fill: white;
  }

  @media (max-width: 480px) {
    .floating-wspp {
      width: 52px;
      height: 52px;
      bottom: 1rem;
      right: 1rem;
    }
    .wspp-icon {
      width: 26px;
      height: 26px;
    }
  }
</style>

